
include {
    global;
}

descriptor {
    variants {
    }
    resources {
    }
}

stages {
    states {
        cull = back;
    }
    ps {
        entry = main;
    }
    vs {
        entry = main;
    }
    attachments {
        outColor {
            type = output;
            channels = rgba;
            location = 0;
        }
    }
}

vs {
    vec2 positions[3] = vec2[](
        vec2(0.0, -0.5),
        vec2(0.5, 0.5),
        vec2(-0.5, 0.5)
    );

    void main() {
        // debugPrintfEXT("hello");
        gl_Position = vec4(positions[gl_VertexIndex], 0.0, 1.0);
    }
}

ps {
    void main() {
        outColor = vec4(1.0, 1.0, 1.0, 1.0);
    }
}
