
include {
    global;
}

descriptor {
    variants {
        Color: red, black, green, green2, blue;
        TestVariant: one, two, three;
    }
    resources {
        int testVal;
    }
}

stages {
    ps {
        entry = main;
        use testVal;
        #if renderPass == color
            use ambientLight;
            use sunLight;
            use sunDir;
        #endif
    }
    vs {
        entry = main;
        use viewProj;
        #if TestVariant == one
            use cameraPos;
        #endif
        use testVal;
    }
}

global {
    // just testing, nothing here
}

vs {
    vec2 positions[3] = vec2[](
        vec2(0.0, -0.5),
        vec2(0.5, 0.5),
        vec2(-0.5, 0.5)
    );

    void main() {
        gl_Position = vec4(positions[gl_VertexIndex], 0.0, 1.0);
    }
}

ps {
    layout(location = 0) out vec4 outColor;

    void main() {
        #if Color == red
            outColor = vec4(1.0, 0.0, 0.0, 1.0);
        #elif Color == black
            outColor = vec4(0.0, 0.0, 0.0, 1.0);
        #elif Color == green || Color == green2
            outColor = vec4(0.0, 1.0, 0.0, 1.0);
        #else
            outColor = vec4(0.0, 0.0, 1.0, 1.0);
        #endif
    }
}
