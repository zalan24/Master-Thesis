{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Buildbloat",
            "type": "shell",
            "command": "./thirdparty/buildbloat/buildprofile.cmd",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Cmake configure",
            "type": "shell",
            "command": "cmake -S . -B build/",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Cmake build debug",
            "type": "shell",
            "command": "cmake --build build --config Debug",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/build"
                ],
                "pattern": [
                    {
                        "regexp": "^([^:]*)\\((([0-9]+)(,([\\-0-9]+))?)\\): (error|warning|note)( ([^:]*))?: (.*)$",
                        "file": 1,
                        "line": 3,
                        "column": 5,
                        "severity": 6,
                        "code": 8,
                        "message": 9
                    }
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}