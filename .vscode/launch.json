{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
  {
    "name": "(Windows) Attach",
    "type": "cppvsdbg",
    "request": "attach",
    "processId": "${command:pickProcess}"
  },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Playground (linux)",
      "program": "${workspaceFolder}/build/src/apps/playground/Playground",
      "args": [
        "-c../data/configs/playground_default.json",
        "-m../data/resources/models.json",
        "-d../data/",
        "-sshaders/shaders.bin"
      ],
      "cwd": "${workspaceFolder}/build",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Playground (win)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/src/apps/playground/Playground.exe",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build",
      "environment": [],
      "externalConsole": false,
      "internalConsoleOptions": "openOnSessionStart",
      "args": [
        "-c../data/configs/playground_default.json",
        "-m../data/resources/models.json",
        "-d../data/",
        "-sshaders/shaders.bin"
      ]
    }
  ]
}