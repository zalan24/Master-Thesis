{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Windows) Shader preprocessor",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/src/engine/shadercompiler/ShaderPreprocessor.exe",
      "args": [
        // "-r${workspaceFolder}/src/gameLibs/shaders",
        // "-c${workspaceFolder}/build/src/gameLibs/shaders/shadercache",
        // "--headers",
        // "${workspaceFolder}/build/src/gameLibs/shaders",
        // "-o${workspaceFolder}/build/shaders/shaders.bin",
        // "-d${workspaceFolder}/build/shaders/debug/",
        // "-g${workspaceFolder}/build/shaders/debug/gen/",
        // "--hardware",
        // "${workspaceFolder}/data/compile/deviceLimits.json",
        // "--options",
        // "${workspaceFolder}/data/compile/shaderCompileOptions.json",
        // "${workspaceFolder}/src/gameLibs/shaders/global.sh",
        // "${workspaceFolder}/src/gameLibs/shaders/test.sd"
        "--target", "${workspaceFolder}/build/shaders/preprocessors/testShaders.json",
        "--output", "${workspaceFolder}/build/shaders/cpp",
        "--headers", "${workspaceFolder}/src/gameLibs/shaders/global.sh",
        "--sources", "${workspaceFolder}/src/gameLibs/shaders/test.sd",
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/src/gameLibs/shaders",
      "environment": [],
      "externalConsole": false,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "(Windows) Shader compiler",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/src/engine/shadercompiler/ShaderCompiler.exe",
      "args": [
        // "-r${workspaceFolder}/src/gameLibs/shaders",
        // "-c${workspaceFolder}/build/src/gameLibs/shaders/shadercache",
        // "--headers",
        // "${workspaceFolder}/build/src/gameLibs/shaders",
        // "-o${workspaceFolder}/build/shaders/shaders.bin",
        // "-d${workspaceFolder}/build/shaders/debug/",
        // "-g${workspaceFolder}/build/shaders/debug/gen/",
        // "--hardware",
        // "${workspaceFolder}/data/compile/deviceLimits.json",
        // "--options",
        // "${workspaceFolder}/data/compile/shaderCompileOptions.json",
        // "${workspaceFolder}/src/gameLibs/shaders/global.sh",
        // "${workspaceFolder}/src/gameLibs/shaders/test.sd"
        "--hardware", "${workspaceFolder}/data/compile/deviceLimits.json",
        "--options", "${workspaceFolder}/data/compile/shaderCompileOptions.json",
        "-o${workspaceFolder}/build/shaders/shaders.bin",
        "-c${workspaceFolder}/build/shaders/cache",
        "--files", "${workspaceFolder}/build/shaders/preprocessors/testShaders.json"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/src/gameLibs/shaders",
      "environment": [],
      "externalConsole": false,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "(Windows) Attach",
      "type": "cppvsdbg",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Playground (win)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/src/apps/playground/Playground.exe",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build",
      "environment": [
        // {"name":"VK_LAYER_PATH", "value":"${workspaceFolder}/build/3rdParty/gfxreconstruct/bin/layer;${env:VK_LAYER_PATH}"},
        {"name": "VK_LAYER_SETTINGS_PATH", "value": "${workspaceFolder}/data/captureCfg"},
        {"name": "VK_APIDUMP_OUTPUT_RANGE", "value": "0-10-1"},
        {"name": "VK_APIDUMP_LOG_FILENAME", "value": "${workspaceFolder}/build/api_dump_log.txt"},
        // {"name": "VK_LAYER_PATH", "value": "${workspaceFolder}/build/vulkanLayers"}
      ],
      "externalConsole": false,
      "internalConsoleOptions": "openOnSessionStart",
      "args": [
        "-c../data/configs/playground_default.json",
        "-m../data/resources/models.json",
        "-d../data/",
        // "--gfx",
        "--api_dump",
        "--renderdoc",
        "--runtime_stats",
        "${workspaceFolder}/build/statistics/runtimeStats.bin",
        "-sshaders/shaders.bin"
      ]
    },
    {
      "name": "Gfx replay capture (win)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/3rdParty/gfxreconstruct/bin/tools/replay/gfxrecon-replay.exe",
      "args": [
        "--paused",
        "gfxrecon_capture_frames_1_through_10.gfxr"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build",
      "environment": [],
      "externalConsole": false,
      "internalConsoleOptions": "openOnSessionStart",
    },
    {
      "name": "Gfx info (win)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/3rdParty/gfxreconstruct/bin/tools/info/gfxrecon-info.exe",
      "args": [
        "gfxrecon_capture_frames_1_through_10.gfxr"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build",
      "environment": [],
      "externalConsole": false,
      "internalConsoleOptions": "openOnSessionStart",
    },
    {
      "name": "Gfx extract shaders (win)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/3rdParty/gfxreconstruct/bin/tools/extract/gfxrecon-extract.exe",
      "args": [
        "gfxrecon_capture_frames_1_through_10.gfxr"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build",
      "environment": [],
      "externalConsole": false,
      "internalConsoleOptions": "openOnSessionStart",
    }
  ]
}